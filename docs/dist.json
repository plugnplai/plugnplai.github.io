{
  "openapi": "3.0.0",
  "info": {
    "title": "Plug and Plai API",
    "description": "Plug and Plai is a directory of AI plugins available at [plugnplai.com](https://plugnplai.com). It also includes an open-source library that aims to simplify the integration of AI plugins into open-source language models (LLMs). The library can be found on GitHub at [github.com/edreisMD/plugnplai](https://github.com/edreisMD/plugnplai).\n\nThis API allows LLMs to retrieve a list of plugins, with filtering options by working status and category.",
    "version": "1.0.0",
    "x-logo": {
      "url": "https://static.wixstatic.com/media/8db8c5_64370c339e9d4edbbddd2043f548ffc9~mv2.png",
      "altText": "Plug and Plai logo"
    }
  },
  "servers": [
    {
      "url": "https://www.plugnplai.com/_functions"
    }
  ],
  "paths": {
    "/getUrls": {
      "get": {
        "summary": "Get URLs",
        "description": "Retrieves a list of all URLs stored in the \"plugin\" collection. Optionally filter the results based on the specified query parameter.",
        "responses": {
          "200": {
            "description": "A list of URLs.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "urls": {
                      "type": "array",
                      "items": {
                        "type": "string"
                      }
                    }
                  }
                }
              }
            }
          },
          "404": {
            "description": "No URLs found in the database.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "error": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/getUrls/{filterOption}": {
      "get": {
        "summary": "Filter URLs by verification method",
        "description": "Retrieves a list of all URLs stored in the \"plugin\" collection based on the specified path option.",
        "parameters": [
          {
            "name": "filterOption",
            "in": "path",
            "description": "Path option to filter the results. Possible values are 'working' and 'ChatGPT'.",
            "required": false,
            "schema": {
              "type": "string",
              "enum": ["working", "ChatGPT"]
            }
          }
        ],
        "responses": {
          "200": {
            "description": "A list of URLs.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "urls": {
                      "type": "array",
                      "items": {
                        "type": "string"
                      }
                    }
                  }
                }
              }
            }
          },
          "404": {
            "description": "No URLs found in the database.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "error": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/getCategoryUrls/{category}": {
      "get": {
        "summary": "Filter URLs by category",
        "description": "Retrieves a list of all URLs stored in the \"plugin\" collection based on the specified category.",
        "parameters": [
          {
            "name": "category",
            "in": "path",
            "description": "Category to filter the results. Possible values are 'shopping', 'food', 'productivity', 'language', 'messaging', 'financial', 'education', 'code', and 'travel'.",
            "required": true,
            "schema": {
              "type": "string",
              "enum": ["weather", "pet", "travel", "marketing", "productivity", "dev", "sales", "social", "search", "utility", "financial", "services", "video", "messaging", "food", "image", "code", "shopping", "education", "legal"]
            }
          }
        ],
        "responses": {
          "200": {
            "description": "A list of URLs.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "urls": {
                      "type": "array",
                      "items": {
                        "type": "string"
                      }
                    }
                  }
                }
              }
            }
          },
          "404": {
            "description": "No URLs found in the database for the specified category.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "error": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/categoryNames": {
      "get": {
        "summary": "Get All Categories",
        "description": "Retrieves a list of all unique categories in the \"plugins\" collection.",
        "responses": {
          "200": {
            "description": "A list of categories.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "categories": {
                      "type": "array",
                      "items": {
                        "type": "string"
                      }
                    }
                  }
                }
              }
            }
          },
          "404": {
            "description": "No categories found in the database.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "error": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },    
    "/getAllPluginsJson": {
      "get": {
        "summary": "Get All Plugins (JSON Data)",
        "description": "Retrieves all plugin data stored in the \"plugin\" collection, including all relevant fields.",
        "responses": {
          "200": {
            "description": "A list of plugins with all relevant fields.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "plugins": {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "properties": {
                          "schemaVersion": {
                            "type": "string"
                          },
                          "nameForModel": {
                            "type": "string"
                          },
                          "nameForHuman": {
                            "type": "string"
                          },
                          "descriptionForHuman": {
                            "type": "string"
                          },
                          "descriptionForModel": {
                            "type": "string"
                          },
                          "apiType": {
                            "type": "string"
                          },
                          "apiUrl": {
                            "type": "string"
                          },
                          "hasUserAuthentication": {
                            "type": "boolean"
                          },
                          "authType": {
                            "type": "string"
                          },
                          "logoUrl": {
                            "type": "string"
                          },
                          "contactEmail": {
                            "type": "string"
                          },
                          "legalInfoUrl": {
                            "type": "string"
                          },
                          "upCount": {
                            "type": "integer"
                          },
                          "aiPluginJsonData": {
                            "type": "object"
                          }
                        }
                      }
                    }
                  }
                }
              }
            }
          },
          "404": {
            "description": "No plugins found in the database.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "error": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {}
}